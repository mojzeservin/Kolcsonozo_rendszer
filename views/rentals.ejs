<%- include("header.ejs") %>&nbsp;

<%- include('message') %>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>User's name</th>
            <th class="text-center">Item</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% results.forEach((item, index) => { %>
            <tr>    
                <td><%= (index+1) %>.</td>
                <td><%= item.name %></td>
                <td class="text-center"><%= item.title %></td>
                <td class="text-end">                    
                    <%if(session.isLoggedIn==true && session.userRole=="admin") {%>
                        <a href="./rentalDelete/<%= item.id %>" class="btn btn-danger"><i class="bi bi-trash3"></i></a>
                    <% }%>
                </td>
            </tr>

        <% }); %>
    </tbody>
    <tfoot>
        <tr>
            <td colspan="5" class="text-center">Total: <%= total %> borrowed items</td>
        </tr>
    </tfoot>
</table>

<%- include('footer') %>